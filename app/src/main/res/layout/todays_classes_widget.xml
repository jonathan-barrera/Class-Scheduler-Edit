<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    android:id="@+id/todays_classes_widget_linear_layout"
    android:padding="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/class_scheduler"
        android:textColor="#4a4949"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/todays_classes_widget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Today's Classes (Monday)"
        android:textColor="#4a4949"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#4a4949"
        />

    <ListView
        android:id="@+id/todays_classes_widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/empty_view"
        android:text="@string/no_classes"
        android:textColor="#4a4949"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>